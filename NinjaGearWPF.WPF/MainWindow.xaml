<Window x:Class="NinjaGearWPF.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaGearWPF.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" DataContext="Main">
    <Grid>
        <DataGrid Name="NinjaGrid" HorizontalAlignment="Left" Height="302" Margin="10,10,0,0" VerticalAlignment="Top" Width="500">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id">
                    
                </DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
          
    </Grid>
</Window>
